# Makefile.in for COBOL runtime library

srcdir=@srcdir@
top_srcdir=@top_srcdir@
top_builddir=@top_builddir@
VPATH=@srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@
CC=@CC@
AR=ar
RANLIB=@RANLIB@
CFLAGS=@CFLAGS@ @ADD_CFLAGS@
CPPFLAGS=@CPPFLAGS@ @ADD_CPPFLAGS@ -I$(srcdir) -I$(top_srcdir)/include
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@

LIB=libcobol.a

OBJS=	io.o \
	numeric.o \
	string.o \
	fileio.o \
	object.o \
	intrinsic.o \
	decimal.o \
	memory.o \
	error.o

HDRS=	cobol.h cobolrt.h

all: $(LIB)

$(LIB): $(OBJS)
	$(AR) cru $@ $(OBJS)
	$(RANLIB) $@

.c.o:
	$(CC) $(DEFS) $(CPPFLAGS) $(CFLAGS) -c $<

io.o: $(srcdir)/io.c $(srcdir)/cobolrt.h
numeric.o: $(srcdir)/numeric.c $(srcdir)/cobolrt.h
string.o: $(srcdir)/string.c $(srcdir)/cobolrt.h
fileio.o: $(srcdir)/fileio.c $(srcdir)/cobolrt.h
object.o: $(srcdir)/object.c $(srcdir)/cobolrt.h
intrinsic.o: $(srcdir)/intrinsic.c $(srcdir)/cobolrt.h
decimal.o: $(srcdir)/decimal.c $(srcdir)/cobolrt.h
memory.o: $(srcdir)/memory.c $(srcdir)/cobolrt.h
error.o: $(srcdir)/error.c $(srcdir)/cobolrt.h

install: $(LIB)
	test -z "$(DESTDIR)$(libdir)" || mkdir -p "$(DESTDIR)$(libdir)"
	$(INSTALL_DATA) $(LIB) $(DESTDIR)$(libdir)
	test -z "$(DESTDIR)$(includedir)" || mkdir -p "$(DESTDIR)$(includedir)"
	$(INSTALL_DATA) $(srcdir)/cobol.h $(DESTDIR)$(includedir)
	$(INSTALL_DATA) $(srcdir)/cobolrt.h $(DESTDIR)$(includedir)

clean:
	rm -f $(OBJS) $(LIB)

distclean: clean
	rm -f Makefile
